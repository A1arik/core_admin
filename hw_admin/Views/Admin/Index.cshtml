@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
@{
    ViewBag.Title = "Admin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h3>
                Users
            </h3>
            <a asp-action="Create">Добавить пользователя</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Год
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                                    <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-userid="@user.Id">Роли</a>
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="col-md-6">
            <h3>
                Roles
            </h3>
            <a asp-action="CreateRole">Добавить роль</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>